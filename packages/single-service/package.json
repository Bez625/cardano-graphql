{
  "name": "@cardano-graphql/single-service",
  "version": "0.1.0",
  "description": "Contains a service to follow the chain and insert data into Dgraph",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b ./src",
    "cleanup": "shx rm -rf dist node_modules",
    "lint": "eslint --ignore-path ../../.eslintignore \"**/*.ts\"",
    "prepack": "yarn build",
    "test": "yarn build && NODE_ENV=test jest -c ./test/jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/input-output-hk/cardano-graphql.git"
  },
  "contributors": [
    "Rhys Bartels-Waller <rhys.bartelswaller@iohk.io> (https://iohk.io)",
    "James Sweetland"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/input-output-hk/cardano-graphql/issues"
  },
  "homepage": "https://github.com/input-output-hk/cardano-graphql/blob/master/packages/single-service/README.md",
  "files": [
    "dist/*",
    "!dist/__test__",
    "!dist/**/*.test.*",
    "LICENSE",
    "NOTICE"
  ],
  "dependencies": {
    "@cardano-graphql/chain-follower": "0.1.0",
    "@cardano-graphql/util": "5.1.0",
    "@cardano-graphql/worker": "0.1.0",
    "bunyan": "^1.8.15",
    "camelcase-keys": "7.0.0",
    "death": "^1.1.0",
